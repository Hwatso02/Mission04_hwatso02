<!--Attach Model-->
@model GradeCalculatorModel;

<!--Create Form-->
<h4>Grade Calculator</h4>
<form method="post">
    <label>Assignments Percentage:</label>
    <input id="Assignments" asp-for="Assignment"/><br /><br />
    <label>Group Project Percentage:</label>
    <input id="GroupProject" asp-for="Project"/><br /><br />
    <label>Quizzes Percentage:</label>
    <input id="Quizzes" asp-for="Quiz"/><br /><br />
    <label>Midterm Exam Percentage:</label>
    <input id="MidtermExam" asp-for="Midterm"/><br /><br />
    <label>Final Exam Percentage:</label>
    <input id="FinalExam" asp-for="Final"/><br /><br />
    <label>INTEX Percentage:</label>
    <input id="Intex" asp-for="Death"/><br /><br />
    <!--<label>Overall Grade:</label>
    <div id="grade"></div><br /><br />-->
    <input id="btnCalculate" type="submit" value="Calculate Grade" />
    <br /><br />

    <div asp-validation-summary="All"></div>
</form>